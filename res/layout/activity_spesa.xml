<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_spesa"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:padding="0px"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Spesa" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@color/spesa"
        android:orientation="horizontal"
        android:paddingTop="0px" >

        <TextView
            android:id="@+id/listaSpese"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:text="@string/spesa1"
            android:textColor="@color/white"
            android:textSize="15pt" />

        <ImageButton
            android:id="@+id/addSpesa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/spesa"
            android:src="@drawable/ic_menu_example" />
    </LinearLayout>

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:paddingLeft="5dp"
    android:layout_below="@+id/linearLayout2"
    android:text="Non ci sono recod da visualizzare..."
    android:textColor="@color/white" />

<LinearLayout
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/linearLayout1"
    android:background="@color/spesa_1"
    android:orientation="horizontal"
    >

    <ImageButton
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_horizontal"
        android:background="@color/spesa_1"
        android:padding="0dp"
        android:src="@drawable/prev_btn" />

    <TextView
        android:id="@+id/mese_anno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="45dp"
        android:paddingRight="45dp"
        android:text="[Mese][Anno]"
        android:textColor="@color/white"
        android:textSize="8pt" />

    <ImageButton
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|end"
        android:paddingLeft="10dp"
        android:background="@color/spesa_1"
        android:src="@drawable/next_btn" />
    <Spinner 
        android:id="@+id/ordina_uscita"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/white"
        android:spinnerMode="dropdown"
        android:entries="@array/ordina"
        android:prompt="@string/ordina1"
        android:textSize="8pt"
        android:drawSelectorOnTop = "true"
        />

</LinearLayout>

</RelativeLayout>